# Required: Your Sanity project configuration
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-02-10

# Optional: For authenticated requests (draft preview)
SANITY_VIEWER_TOKEN=your-viewer-token

# Optional: For Redis caching with Vercel KV
KV_REST_API_URL=https://your-instance.upstash.io
KV_REST_API_TOKEN=your-token
KV_REST_API_READ_ONLY_TOKEN=your-read-token

# Optional: For Redis caching with Upstash directly
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token